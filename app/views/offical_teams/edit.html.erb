<div id="wide_left_content" class="sect">
  <h2><%=h @title%></h2>
  <%= error_messages_for :offical_team %>
  <br/>
  <div class="tab_container" style="margin:10px 0 20px 0">
  <span class="tab_link" style="margin-left: 10px;">修改基本信息</span>
  <span class="tab_link<%= " tabSelected" if params[:tab_index] == '1'%>">修改队标</span>

  <% form_for @offical_team,:html => { :class=>"tab"} do |f| %>
    <%= render :partial => "form", :locals=>{:f=> f}%>
    <p><%= f.submit '保存基本信息' %></p>
  <% end %>

  <% form_for(:offical_team, :url => update_image_offical_team_path(@offical_team),:html => { :method=>:put, :multipart => true, :class=>"tab" }) do |f| %>
    <%= hidden_field_tag :tab_index, 1%>
    <%= offical_team_image_tag @offical_team, {:style=>"margin:20px 0 0 0"} %>
    <p>
      <label>更改队标</label><br/>
      <%= f.file_field  :uploaded_data %>
    </p>

    <p>
      <%= f.submit "上传队标" %>
    </p>
  <% end %>
  </div>
</div>

<div class="cb"></div>
