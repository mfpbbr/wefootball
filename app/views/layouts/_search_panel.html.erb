<% search_paths = {
  :user => 
    {:link_to=>link_to("用户", search_users_path), :url=>search_users_path},
  :team => 
    {:link_to=>link_to("队伍", search_teams_path), :url=>search_teams_path}
}%>
<% form_tag search_paths[default][:url], :method=>:get, :id=>"header_search" do%>
  <table><tr>
  <td class="dropdown_container">
    <%= image_tag 'default_user.gif', :width=>20, :height=>20%>
    <ul class="dropdown" style="top:20px;left:0px;width:100px">
      <%search_paths.values.each do |v|%>
        <li><%= v[:link_to]%></li>
      <%end%>
    </ul>
  </td>
  <td><%= text_field_tag 'q', '', :size=>15 %></td>
  <td><%= submit_tag '搜索', :class=>"submit" %></td>
  </tr></table>
<%end%>