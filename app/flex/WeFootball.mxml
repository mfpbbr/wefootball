<?xml version="1.0" encoding="utf-8"?>
<mx:Application
	xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:wfom="com.wefootball.components.*"
	xmlns:accom="com.wefootball.components.account.*"
>
	<mx:Style source="stylesheets/Style.css"/>
	<mx:Script>
	<![CDATA[
		import com.wefootball.events.RegisterEvent;
		import com.wefootball.events.LoginEvent;
		
		private function login(e:LoginEvent):void {
			mainStack.selectedChild = mainBox;
		}
	]]>
	</mx:Script>
	<mx:ViewStack id="mainStack" width="100%" height="100%">
		<accom:AccountBox login="login(event)" verticalAlign="middle" horizontalAlign="center"/>
		<wfom:MainBox id="mainBox" verticalAlign="middle" horizontalAlign="center"/>
	</mx:ViewStack>
</mx:Application>
