<% team_img = image_tag('team_search_icon.gif', :title=>'搜索球队') 
   user_img = image_tag('people_search_icon.gif', :title=>'搜索用户')
  search_paths = {
  :user => 
    {:image => user_img,
    :link_to=>"#{link_to(user_img, search_users_path)} #{link_to('用户搜索', search_users_path)}", 
    :url=>search_users_path,
    :text=>'搜索用户'},
  :team => 
    {:image => team_img,
    :link_to=>"#{link_to(team_img, search_teams_path)} #{link_to("球队搜索", search_teams_path)}", 
    :url=>search_teams_path,
    :text=>'搜索队伍'}
}%>
<% form_tag search_paths[default][:url], :method=>:post, :id=>"header_search" do%>
  <table><tr>
  <td class="dropdown_container">
    <%= search_paths[default][:image]%><%=image_tag 'search_down.gif', :title=>''%>
    <div class="dropdown" style="top:20px;left:0px;width:90px">
      <%search_paths.values.each do |v|%>
        <div>
          <%= v[:link_to]%>
        </div>
      <%end%>
    </div>
  </td>
  <td><%= text_field_tag 'q', search_paths[default][:text], :size=>21, :class=>'input blurinput' %></td>
  <td><%= submit_tag '', :class=>"submit search", :title=>'搜索' %></td>
  </tr></table>
<%end%>