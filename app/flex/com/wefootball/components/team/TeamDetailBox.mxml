<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%" backgroundColor="#FFFDFD">

<mx:Script>
	<![CDATA[
		import mx.controls.Alert;
		import mx.rpc.events.ResultEvent;
		import mx.rpc.events.FaultEvent;
		import com.wefootball.events.TeamDetailEvent;
		import com.wefootball.model.Team;
		import com.wefootball.model.User;
		
		[Bindable]
	    public var team:Team = Team.currentTeam;	
	]]>
</mx:Script>

<!--	<mx:VBox styleName="content" width="100%" height="100%">-->
		<mx:Form visible="{team!=null}" backgroundAlpha="0.0">
			<mx:FormItem label="球队名称" >
				<mx:Label text="{team.name}" />
			</mx:FormItem>
			<mx:FormItem label="球队简称" >
				<mx:Label text="{team.shortname}" />
			</mx:FormItem>
			<mx:FormItem label="建队时间" >
				<mx:Label text="{df.format(team.found_time)}">
				</mx:Label>
			</mx:FormItem>
			<mx:FormItem label="球队风格" >
				<mx:Label text="{team.style}" />
			</mx:FormItem>
			<mx:FormItem label="球队简介">
				<mx:Label text="{team.summary}"/>
			</mx:FormItem>
			<mx:FormItem direction="horizontal">
				<mx:Button label="退出"/>
				<mx:Button label="加入"/>
			</mx:FormItem>
		</mx:Form>
		<mx:DateFormatter id="df" formatString="YYYY-MM-DD" />
<!--	</mx:VBox>-->
</mx:Canvas>