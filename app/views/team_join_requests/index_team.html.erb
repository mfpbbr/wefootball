<h1>我申请加入的球队</h1>

<% for req in @requests %>
  <div>
    <%= render :partial => "shared/team_icon", :object => req.team%>
    <span>申请日期: <%= req.apply_date.to_s(:db) %></span><br/>
    <%if !req.message.nil? && !req.message.blank?%>
      <span>留言: </span>
      <p><%=simple_format h(req.message)%></p>
    <%end%>
    <%= link_to '撤销申请', team_join_request_path(req.id, :back_uri => request.request_uri), :method => :delete %>
  </div>
<% end %>