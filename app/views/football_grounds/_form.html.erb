<%content_for(:javascript) do%>
  <%= javascript_include_tag province_city_select_url %>
<%end%>

<p>
  <b>名称</b><br />
  <%= f.text_field :name %>
</p>

<p>
  <b>所在地</b><br />
  <%= f.province_city_select :city %>
</p>

<p>
  <b>球场类型</b><br />
  <%(1..5).each do |v| %>
     <%= f.radio_button :ground_type, v %><%=ground_type_text(v)%>
  <%end%>
</p>

<p>
  <b>描述</b><br />
  <%= f.text_area :description %>
</p>