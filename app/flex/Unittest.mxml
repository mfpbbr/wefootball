<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute" xmlns:flexui="flexunit.flexui.*" creationComplete="initializeHandler(event)">
    <mx:Script><![CDATA[
	import flexunit.framework.TestSuite;
	import com.wefootball.tests.*
	
	private function initializeHandler(event:Event):void {
		var suite:TestSuite = new TestSuite();
		suite.addTest(UserInformationTest.suite(this));
		
		testRunner.test = suite;
		testRunner.startTest();
	}
	]]>
	</mx:Script>
	<flexui:TestRunnerBase id="testRunner" width="100%" height="100%" />
</mx:Application>
