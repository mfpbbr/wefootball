<div id="wide_left_content" class="sect">
  <h2><%=h @title%></h2>
  <%= error_messages_for :official_team %>
  <br/>
  <div class="tab_container" style="margin:10px 0 20px 0">
  <span class="tab_link" style="margin-left: 10px;">修改基本信息</span>
  <span class="tab_link<%= " tabSelected" if params[:tab_index] == '1'%>">修改队标</span>

  <% form_for @official_team,:html => { :class=>"tab"} do |f| %>
    <%= render :partial => "form", :locals=>{:f=> f}%>
    <p><%= f.submit '保存基本信息' %></p>
  <% end %>

  <% form_for(:official_team, :url => update_image_official_team_path(@official_team),:html => { :method=>:put, :multipart => true, :class=>"tab" }) do |f| %>
    <%= hidden_field_tag :tab_index, 1%>
    <%= official_team_image_tag @official_team, {:thumb=>:small, :style=>"margin:20px 0 0 0"} %>
    <p>
      <label>更改队标</label><br/>
      <%= f.file_field  :uploaded_data %>
    </p>

    <p>
      <%= f.submit "上传队标" %>
    </p>
  <% end %>
  </div>
</div>

  
<div id="narrow_right_content" class="sect">
  <h2></h2>
  <ul class="sidebar_menu">
    <li>
      > <%= link_to '返回球队列表', official_teams_path %>
    </li>
  </ul>
</div>
<div class="cb"></div>
