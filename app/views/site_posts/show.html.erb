<div id="wide_left_content">
  <div class="sect">
  <h2><%=h @site_post.title %></h2>
  <%= render(:partial => 'site_posts/post', :object => @site_post)%>
  <%= render(:partial => 'site_posts/post', :collection => @site_post.site_replies, :locals => {:parent => @site_post})%>
  </div>

  <div class="sect clearBoth">
    <h2>回复</h2>
    <%= error_messages_for :reply %>
    <br/>
    <% form_for :reply, :url => site_post_site_replies_path(@site_post) do |f| %>
      <%if !logged_in?%>
        <p><label for="email">Email <span class="optional">(可选, 方便WeFootball联系你)</span></label><br/>
        <%= f.text_field :email, :size=>30, :maxlength=>100 %></p>
      <%end%>
      <%= f.text_area :content, :rows=>10, :cols=>50 %>
      <br/><br/>
      <%= f.submit "提交" %>
    <% end %>
  </div>
</div>

<div id="narrow_right_content">
  <div class="sect">
    <h2></h2>
    <%=render :partial=>'site_posts/sidebar_menu'%>
  </div>
</div>
<div class="clearBoth"></div>