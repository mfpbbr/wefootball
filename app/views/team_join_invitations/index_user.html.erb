<h1><%=h @team.shortname%>邀请加入的用户</h1>

<% for req in @requests %>
  <div>
    <%= render :partial => "shared/user_icon", :object => req.user%>
    <span>申请日期: <%= req.apply_date.to_s(:db) %></span><br/>
    <%if !req.message.nil? && !req.message.blank?%>
      <span>留言: </span>
      <p><%=simple_format h(req.message)%></p>
    <%end%>
    <%= link_to '撤销邀请', team_join_invitation_path(req.id, :back_uri => request.request_uri), :method => :delete %>
  </div>
<% end %>