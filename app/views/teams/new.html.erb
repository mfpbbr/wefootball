<%= error_messages_for :team %>
<% form_for :team, :url => teams_path do |f| -%>

<p><label for="name">球队名称</label><br/>
<%= f.text_field :name %></p>

<p><label for="shortname">球队简称</label><br/>
<%= f.text_field :shortname %></p>

<p><label for="found_time">建队日期</label><br/>
<%= f.date_select :found_time, :start_year=>1900, :end_year=>Date.today.year %></p>

<p><label for="style">球队风格</label><br/>
<%= f.text_field :style %></p>

<p><label for="summary">球队简介</label><br/>
<%= f.text_area :summary %></p>

<p><%= submit_tag '创建' %></p>
<% end -%>
