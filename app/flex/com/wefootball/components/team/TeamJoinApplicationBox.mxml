<?xml version="1.0" encoding="utf-8"?>
<mx:Box xmlns:mx="http://www.adobe.com/2006/mxml">
	<mx:Script>
		<![CDATA[
			import mx.controls.Alert;
			import mx.rpc.events.ResultEvent;
          	
          	public function createTeamJoinApplication():void {
          		svcTeamJoinApplicationCreate.request['team_join_request[user_id]'] = 10;
          		svcTeamJoinApplicationCreate.request['team_join_request[team_id]'] = 11;
          		svcTeamJoinApplicationCreate.send();
          	}
          	private function handleTeamJoinApplication(event:ResultEvent):void
          	{
          		/*错误处理*/
          		Alert.show("Application Sent!!");
          	}			
		]]>
	</mx:Script>	
	
	<mx:HTTPService
	    id="svcTeamJoinApplicationCreate"
	    url="/team_join_requests.xml"
	    resultFormat="e4x"
	    method="POST"
	    result="handleTeamJoinApplication(event)"
	/>
	<mx:Label />
	<mx:TextArea />
	<mx:Button id="inviteButton" label="发出申请" click="createTeamJoinApplication()" />
</mx:Box>
