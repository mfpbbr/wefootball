<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%"
	height="100%" label="登陆">
	
<mx:Metadata>
	[Event(name="login", type="com.wefootball.events.LoginEvent")]
</mx:Metadata>
<mx:Script>

<![CDATA[
	import mx.controls.Alert;
	import mx.rpc.events.ResultEvent;
	import mx.rpc.events.FaultEvent;
	import com.wefootball.events.LoginEvent;
	import com.wefootball.model.User;
	
	private function login():void {
 		User.logon(loginTI.text, passwordTI.text, handleAccountLoginResult, handleFault );
	}
	private function handleAccountLoginResult(event:ResultEvent):void {
		var result:Object = event.result;
		dispatchEvent(new LoginEvent(XML(result)));
	}
	
	private function handleFault(event:FaultEvent):void {
		Alert.show("用户名不存在或者密码错误", "登录失败")
	}
]]>
</mx:Script>
	
	<mx:Form labelWidth="150">
		<mx:FormItem label="你的email地址">
			<mx:TextInput id="loginTI" text="saki@saki.com"/>
		</mx:FormItem>
		<mx:FormItem label="密码">
			<mx:TextInput id="passwordTI" text="111111"
			displayAsPassword="true"/>
		</mx:FormItem>
		<mx:FormItem>
			<mx:Button id="loginButton" 
				label="登陆" 
				click="login();"/>
		</mx:FormItem>
	</mx:Form>
</mx:VBox>