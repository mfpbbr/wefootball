<div id="left_content" class="sect" style="width:430px">
  <div class="sect">
    <h2><%=h @title%></h2>
    <%= render(:partial => 'match_info', :collection => @official_matches)%>
    <%= will_paginate @official_matches %>
  </div>
</div>

<div id="right_content" class="activities sect" style="width:460px">
  <h2>近期人数最多的看球活动</h2>
  <%@watches.each do |w|%>
    <%= render :partial => 'shared/activity', :object => w%>
    <div class="cb"></div>
  <%end%>
    
  <ul class="sidebar_menu">
    <%if @is_editor%>
    <li> > <%= link_to('新建比赛', new_official_match_path)%></li>
    <%end%>
  </ul>
</div>
<div class="cb"></div>

