<div>
  <h1>邀请的用户列表</h1>
</div>
<table>
  <tr>
    <th>时间</th>
    <th>用户</th>
    <th>留言</th>
    <th></th>
    <th></th>   
  </tr>
  
<% for req in @requests %>
  <tr>
    <td><%=h req.apply_date %></td>
    <td><%= link_to req.user.nickname, user_path(req.user_id) %></td>
    <td><%=h req.message %></td>
    <%if req.user_id == current_user.id%>
      <td><%= link_to '接受', team_joins_path(:id=>req.id), :method => :post %></td>
      <td><%= link_to '拒绝', team_join_invitation_path(req.id), :method => :delete %></td>
    <%end%>
  </tr>
<% end %>
</table>

