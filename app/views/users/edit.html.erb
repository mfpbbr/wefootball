<%= error_messages_for :user %>

<% form_for(@user) do |f| %>
  <p><label for="nickname">昵称</label><br/>
  <%= f.text_field :nickname %>
  
  <p><label for="birthday">生日</label><br/>
  <%= f.date_select :birthday, :start_year=>1900 %>
  
  <p><label for="height">身高</label><br/>
  <%= f.text_field :height %>
  
  <p><label for="weight">体重</label><br/>
  <%= f.text_field :weight %>
  
  <p><label for="summary">个人简介</label><br/>
  <%= f.text_area :summary %>
  
  <p>
  <%Position::POSITIONS.each do |pos|%>
    <%=check_box_tag 'positions[]', pos, @positions.index(pos)!=nil %>
    <%=position_text pos%>
  <%end%>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<% form_for(@user) do |f| %>
  <p><label for="password">密码</label><br/>
  <%= f.password_field :password %></p>

  <p><label for="password_confirmation">确认密码</label><br/>
  <%= f.password_field :password_confirmation %></p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

