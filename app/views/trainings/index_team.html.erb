<h2><%= link_to @team.name, team_path(@team)%>的所有训练</h2>
<table>
  <tr>
    <th>时间</th>
    <th>地点</th>
    <th></th>
  </tr>
  <%@trainings.each do |t|%>
    <tr>
      <td><%= t.start_time%> - <%= t.end_time%></td>
      <td><%=h t.location%></td>
      <td><%=link_to '查看', training_path(t)%></td>
    </tr>
  <%end%>
</table>