<%= error_messages_for :user %>

<% form_for :user do |f| %>
  <p>请为<%= @user.login %>设定新密码：</p>

  <p><label for="password">密码</label><br/>
  <%= f.password_field :password %></p>

  <p><label for="password_confirmation">再次确认密码</label><br/>
  <%= f.password_field :password_confirmation %></p>

  <p><%= submit_tag '提交' %></p>
<% end %>
